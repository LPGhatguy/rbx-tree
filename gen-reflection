#!/bin/sh

set -e

if [ "$1" = "--dry-run" ]; then
	# If run with --dry-run, don't emit the reflection database anywhere.
	cargo run --bin generate_reflection
else
	cargo run --bin generate_reflection -- \
		--msgpack rbx_reflection_database/database.msgpack \
		--json rbx_dom_lua/src/database.json
fi